@page
@model RestauranteWEB.Pages.Proveedores.IndexModel
@{
    ViewData["Title"] = "Index Platos";
}
<h1>Indice Platos</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proveedores[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedores[0].NombreEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedores[0].Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedores[0].Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedores[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedores[0].Direccion)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Proveedores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


