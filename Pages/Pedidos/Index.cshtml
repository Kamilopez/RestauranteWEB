@page
@model RestauranteWEB.Pages.Pedidos.IndexModel
@{
    ViewData["Title"] = "Index Pedidos";
}
<h1>Indice Pedidos</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedidos[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedidos[0].ProveedorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedidos[0].FechaPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedidos[0].Total)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pedidos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProveedorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


