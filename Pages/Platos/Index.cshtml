@page
@model IndexModel
@{
    ViewData["Title"] = "Index Platos";
}
<h1>Indice Platos</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Platos[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platos[0].NombreP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platos[0].PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platos[0].Descripcion)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Platos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

